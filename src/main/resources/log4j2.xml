<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d [%t] %-5p %C{2}.%m%n"/>
        </Console>
        <File name="FILE" fileName="migration-tools.log" append="true">
            <PatternLayout pattern="%d [%t] %-5p %C{2}.%m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <!--Logger name="com.opensymphony.xwork2" level="debug"/>
        <Logger name="org.apache.struts2" level="debug"/ -->
        <Logger name="com.walterj.crusty" level="debug"/>
        <Logger name="com.walterj.crusty.metadata" level="debug"/>
        <Logger name="com.walterj.crusty.action" level="debug"/>
        <Logger name="com.walterj.util" level="debug"/>
        <Logger name="com.walterj.script" level="debug"/>
        <Root level="warn">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="FILE"/>
        </Root>
    </Loggers>
</Configuration>

